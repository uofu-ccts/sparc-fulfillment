.row.line_item{id: "line_item_#{line_item.id}"}
  .col-xs-2.line_item_service_name
    = service_name_display(line_item.service)
  - if tab == 'template'
    .col-xs-1
      .btn.glyphicon.glyphicon-edit.change_line_item_service{title: t(:protocol)[:study_schedule][:change_service], type: 'button', line_item_id: line_item.id, data: {toggle: "tooltip", animation: 'false'}}
    .col-xs-1.text-center
      - state = "#{set_check(line_item)}"
      .glyphicon.check_row.btn.btn-primary{type: 'button', :'data-line_item_id' => line_item.id, check: state, title: state == "true" ? t(:visit)[:check_row] : t(:visit)[:uncheck_row], class: "#{glyph_class(line_item)}", data: {toggle: "tooltip", animation: 'false'}}
  - else
    .col-xs-2
  %div{class: "visits_for_line_item_#{line_item.id}"}
    = render partial: '/study_schedule/visits', locals: {line_item: line_item, page: page, tab: tab}
